<UserControl x:Class="XAMLPatterns.ReactiveCommandPattern.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="525"
    DataContext="{Binding Main, Source={StaticResource Locator}}">

    <StackPanel
        Margin="6"
        Background="White">
        <TextBlock
            Margin="6"
            FontSize="22"
            Foreground="DarkGray"
            TextWrapping="Wrap">
            Blah, blah, blabity blah. Lorem ipsum and all that bacon.
            You agree to some terms that we control and you never even bothered to read.
            We can change these terms without telling you about it. In fact, we probably
            already did.
        </TextBlock>
        <Grid>
            <CheckBox
                Margin="6"
                VerticalAlignment="Center"
                IsChecked="{Binding Agree, Mode=TwoWay}"
                Content="I Agree to the Terms and Conditions" />
            <Button
                Margin="6"
                Padding="3"
                HorizontalAlignment="Right"
                FontSize="22"
                Command="{Binding InstallCommand}"
                Content="Install" />

        </Grid>
    </StackPanel>
</UserControl>
